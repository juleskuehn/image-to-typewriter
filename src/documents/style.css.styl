body
	padding 0
	margin 0
	height 100%
	position absolute
	width 100%

#options
	position relative
	
#viewChop
	canvas
		position absolute
		left 0
		top 100
		
#comboPreview
	position absolute
	top 0
	left 0
	display none
	canvas
		margin 0
		padding 0
		float left
		border solid 2px black
		
#viewSelect
	position absolute
	left 25%
	canvas
		float left
		padding 0
		margin 0 1px 1px 0
		border solid 1px red
		&.space
			border-color blue
	
#keystones
	position relative
	width 0
	height 0
	div
		position absolute
		background rgba(255,0,0,0.15)
		width 19px
		height 19px
		border solid 1px red
		border-radius 10px
		div.v
			width 1px
			height 19px
			position absolute
			left 9px
			top 0
			background red
			border none
		div.h
			width 19px
			height 1px
			position absolute
			left 0
			top 9px
			background red
			border none
			
div#tabs
	position absolute
	z-index 2
	bottom 0
	right 0
	background rgba(0,0,0,0.3)
	padding 3px
	
#charset-target, #image-target
	position absolute
	top 0
	right 0
	z-index 10
	width 20px
	height 20px
	background red

#image-target
	background grey
	right 22px
	
#inputImage, #outputImage
	float right 	

#outputImage
	position absolute
	top 0
	left 466px

div.hidden
	// display none

#charQuadrants
	position relative
	top 400px
	display none
	canvas
		border solid 2px black