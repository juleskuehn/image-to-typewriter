body
	padding 0
	margin 0
	height 100%
	position absolute
	width 100%
	font-family "Helvetica", "Arial", "Droid Sans", sans

h1
	font-size medium
	margin 5px

#sidebar
	position relative
	width 200px
	padding 10px
	background #eee
	font-size small
	border-right solid 1px grey

#options,#buttons
	position relative

	input[type="text"]
		width 50px
		margin 5px

	button
		width 100%

	#charset-target, #image-target
		width 190px
		height 80px
		outline solid 1px gray
		margin 10px 0 10px 0
		padding 5px
		background #ffffff

#topBar
	border-bottom solid 1px grey
	position relative
	h1, #tabs
		display inline-block
	#tabs
		position absolute
		right 0
		height 100%
		button
			background white
			border solid 1px grey
			border-width 0 0 0 1px
			height 100%
			cursor pointer
			margin-left -5px
			&.selected
				background #ffcccc
			&:active
				border-color black

	
#viewChop
	canvas
		position absolute
		left 0
		top 100
		
#comboPreview
	position absolute
	top 0
	left 0
	display none
	canvas
		margin 0
		padding 0
		float left
		border solid 2px black
		
#viewSelect
	position absolute
	left 500px
	top 0
	canvas
		float left
		padding 0
		margin 0 1px 1px 0
		border solid 1px red
		&.space
			border-color blue
	
#keystones
	position relative
	width 0
	height 0
	div
		position absolute
		background rgba(255,0,0,0.15)
		width 19px
		height 19px
		border solid 1px red
		border-radius 10px
		div.v
			width 1px
			height 19px
			position absolute
			left 9px
			top 0
			background red
			border none
		div.h
			width 19px
			height 1px
			position absolute
			left 0
			top 9px
			background red
			border none
			


	
#inputImage, #outputImage
	float right 	

#outputImage
	position absolute
	top 600px
	right 0

div.hidden
	// display none

#charQuadrants
	position relative
	top 400px
	display none
	canvas
		border solid 2px black

#layer1
	position relative
