body
	padding 0
	margin 0
	height 100%
	position absolute
	width 100%
	font-family "Helvetica", "Arial", "Droid Sans", sans
	overflow-x hidden
	&.noZoom
		overflow-x visible
		canvas
			zoom 100% !important

canvas
	margin-bottom -5px

h1
	font-size medium
	margin 5px

#sidebar
	position fixed
	width 200px
	top 30px
	padding 10px
	background #eee
	font-size small
	border-right solid 1px grey
	z-index 1
	height 100%

#options
	position relative

	input
		width 50px
		margin 5px

	button
		width 100

#charset_options,#image_options,#downloads
	display none
	&.show
		display block

#image_options
	input, select
		width 85px
	select
		margin 5px
	div.collapsed
		div
			display none
	div.collapse
		h3
			cursor pointer
			a
				float right
				font-weight normal

#topBar
	z-index 2
	background white
	border-bottom solid 1px grey
	position fixed
	top 0
	left 0
	height 29px
	width 100%
	h1, #tabs
		display inline-block
	#tabs
		position absolute
		right 0
		height 100%
		button
			background white
			border solid 1px grey
			border-width 0 0 0 1px
			height 100%
			cursor pointer
			margin-left -5px
			&.selected
				background #ffcccc


#viewport
	position absolute
	top 30px
	left 221px
	div
		display none

	div.show
		display block
		height 100%
		div
			display block
			width 100%
		h4
			margin 20px
			font-size medium

	#charset-target,#image-target
		width 100%
		height 100%
		font-size larger
		font-weight bold
		position absolute

	#viewChop
		position absolute
	 	canvas
			top 0
			left 0
			position absolute

	#viewSelect
		position relative
		canvas
			position relative
			cursor pointer
			border solid 1px red
			margin-bottom -6px
			margin-right -1px

	#comboPreview
		position absolute
		canvas
			position relative
			margin-bottom -5px

	#view_show_layers canvas
		position relative

div.hidden
	display none

#instructions
	font-size small
	position fixed
	right 5px
	bottom -5px
	width 50%
	border solid 1px grey
	background #ffd
	h4
		margin 5px
	#closeInstructions
		float right
	ul
		padding-left 30px
		padding-right 5px

	display none

#view_show_layers
	div.layer
		position relative
		canvas.overlay
			position absolute !important
			left 0
			top 0