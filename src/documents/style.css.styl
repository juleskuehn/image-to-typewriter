body
	padding 0
	margin 0
	height 100%
	position absolute
	width 100%
	font-family "Helvetica", "Arial", "Droid Sans", sans
	overflow-x hidden

canvas
	margin-bottom -5px

h1
	font-size medium
	margin 5px

#sidebar
	position relative
	width 200px
	top 30px
	padding 10px
	background #eee
	font-size small
	border-right solid 1px grey
	z-index 1

#options,#buttons
	position relative

	input[type="text"]
		width 50px
		margin 5px

	button
		width 100%


#topBar
	z-index 2
	background white
	border-bottom solid 1px grey
	position fixed
	top 0
	left 0
	height 29px
	width 100%
	h1, #tabs
		display inline-block
	#tabs
		position absolute
		right 0
		height 100%
		button
			background white
			border solid 1px grey
			border-width 0 0 0 1px
			height 100%
			cursor pointer
			margin-left -5px
			&.selected
				background #ffcccc
			&:active
				border-color black


#viewport
	position absolute
	top 30px
	left 221px
	div
		display none

	div.show
		display block
		height 100%
		div
			display block
			width 100%
		h4
			margin 20px
			font-size medium
			display none

	#charset-target,#image-target
		width 100%
		height 100%
		padding 10px
		font-size larger
		font-weight bold
		position absolute

	#viewChop
		position absolute
	 	canvas
			top 0
			left 0
			position absolute

	#viewSelect
		position relative
		canvas
			position relative
			cursor pointer
			border solid 1px red
			margin-bottom -6px
			margin-right -1px

	#comboPreview
		position absolute
		canvas
			position relative
			margin-bottom -5px

	#view_show_layers canvas
		position relative