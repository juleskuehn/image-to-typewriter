doctype html
html
  head
    meta(charset='UTF-8')
    title='kword X2'
    link(href='style.css', rel='stylesheet')
  body

    div(id="buttons")

     h3 Instructions
     div(id="charset-target") 1. Drop Charset
     button(type="button" id="chopCharset") 2. Chop Character Set
     p 3. Select chars to be typed - less than 10
     button(type="button" id="genCombos") 4. Generate Combos
     div(id="image-target") 5. Drop Image

    div(id='options')

      div(id="charset_options")
        h3 Chopping Options
        div
         input(type="text" value="79" id="cols")
         label Columns
        div
         input(type="text" value="7" id="rows")
         label Rows
        div
         input(type="text" value="0.65" id="offsetX")
         label Grid Offset X
        div
         input(type="text" value="0.24" id="offsetY")
         label Grid Offset Y
        div
         input(type="text" value="0" id="colStart")
         label Crop Start Column
        div
         input(type="text" value="78" id="colEnd")
         label Crop End Column
        div
         input(type="text" value="0" id="rowStart")
         label Crop Start Row
        div
         input(type="text" value="6" id="rowEnd")
         label Crop End Row

     div(id="image_options")
       h3 Generator Options
       div
        input(type="range" id="row_length" min="1" max="100" value="40" step="1")
        label Row Length
       div
        select(id="bw")
         option(value="ccir") CCIR 601
         option(value="cie") CIE Luma
         option(value="flat") Equal
         option(value="red") Red
         option(value="green") Green
         option(value="blue") Blue
        label B/W Conversion
       div
        input(type="range" id="customR" min="0" max="3" value="1" step="0.10")
        label Red
       div
        input(type="range" id="customG" min="0" max="3" value="1" step="0.10")
        label Green
       div
        input(type="range" id="customB" min="0" max="3" value="1" step="0.10")
        label Blue
       div
        input(type="checkbox" id="dithering" checked)
        label Dither
       div
        input(type="checkbox" id="ditherFine" checked)
        label Dither Fine
       div
        input(type="checkbox" id="considerSpill" checked)
        label Consider Spill?
       div 
        input(type="range" id="spillRatioRight" min="0" max="1" value="0.5" step="0.01")
        label Spill Ratio Right
       div 
        input(type="range" id="spillRatioBottom" min="0" max="1" value="0.5" step="0.05")
        label Spill Ratio Bottom
       div 
        input(type="range" id="spillRatioBottomRight" min="0" max="1" value="0.5" step="0.05")
        label Spill Ratio Bottom Right
       div 
        input(type="range" id="spillRatio" min="0" max="0.5" value="0.1" step="0.005")
        label Spill Ratio Master
       div
        input(type="range" id="spillBrightness" min="0" max="1" value="0.5" step="0.05")
        label Spill Brightness
       div
        input(type="range" id="ditherAmount" min="-1" max="1" value=".1" step="0.05")
        label Dither Strength

    div(id="downloads")
     h3 Download Output
     div
      a(id="download" href="#") Combined mockup
     div
      a(id="download_layer_1" href="#") Top Left Layer
     div
      a(id="download_layer_2" href="#") Top Right Layer
     div
      a(id="download_layer_3" href="#") Bottom Left Layer
     div
      a(id="download_layer_4" href="#") Bottom Right Layer


    div(id='viewChop')
     canvas(id="charsetPreview" width="0" height="0")
     canvas(id="charsetOverlay" width="100" height="100")

    div(id='viewSelect')
    div(id='comboPreview')
    div(id="charQuadrants")

    canvas(id="inputImage")

    canvas(id="outputImage")

    canvas(id="layer1")
    canvas(id="layer2")
    canvas(id="layer3")
    canvas(id="layer4")


    script(src='https://code.jquery.com/jquery-3.1.0.slim.min.js' integrity='sha256-cRpWjoSOw5KcyIOaZNo4i6fZ9tKPhYYb6i5T9RSVJG8=' crossorigin='anonymous')
    script(src='underscore-min.js')
    script(src='combinatorics.js')
    script(src='jquery-ui.min.js')
    script(src='Char.js')
    script(src='Combo.js')
    script(src='kword.js')
    != getBlock('scripts').toHTML()